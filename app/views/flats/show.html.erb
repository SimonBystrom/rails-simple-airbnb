<div>BACKGROUND IMAGE</div>
<div class="show-container">
  <div class="d-flex">
    <div>
      <div class="card p-3 me-3 mb-2">
        <h1 class="card-title"> <%= @flat.name %> </h1>
        <p class="card-subtitle muted"> <%= @flat.address %> </p>
      </div>

      <div class="card p-3  me-3">
        <h3 class="card-title">A bit more about this flat </h1>
        <p class="card-subtitle"> <%= @flat.description %> </p>
      </div>
    </div>

    <div>
      <div class="card p-3 mb-2">
        <h4 class="card-title">Book this place!</h4>
        <form>
          <div class="form">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">From</span>
              </div>
              <input type="date" class="form-control" placeholder="from" aria-label="from" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">To</span>
              </div>
              <input type="date" class="form-control" placeholder="to" aria-label="to" aria-describedby="basic-addon1">
            </div>
          </div>
        </form>
      </div>

      <div>
        <div class="card p-3 mb-2">
          <h3 class="card-title">Details</h3>
          <div class="d-flex">
            <div class="d-flex">
              img
              <p> <%= @flat.number_of_guests %> </p>
            </div>
            <div class="d-flex">
              img
              <p> <%= @flat.price_per_night %> </p>
            </div>
          </div>
        </div>
      </div>

      <div class="card p-3 mb-2">
        <div class="d-flex justify-content-between">
          <p class="card-title">Share</p>
          <div class="d-flex">
            <i>f</i>
            <i>b</i>
            <i>c</i>
            <i>s</i>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
